<div class="container">
  <h1>Your Twitter Feed</h1>
  <button type="button" id="refreshBtn" name="button">Reload Tweets</button>
  <div class="section group">
    <% @tweets.each do |tweet| %>
      <div class="col span_1_2">
        <p class="tweets">
          <%= tweet.title %><br>
          <%= tweet.body %><br>
          <%= tweet.timestamp %> <br><!--apply .strf() method later -->
          <%= tweet.url %><br>
        </p>
      </div>
    <% end %>
  </div>
  <%= link_to 'Back to Home', root_url %>
</div>
